{
	"name": "@dukkani/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./env": {
			"types": "./dist/env.d.ts",
			"default": "./src/env.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:seed": "tsx src/seed/index.ts",
		"db:reset-and-seed": "pnpm db:reset && pnpm db:seed",
		"db:reset": "prisma migrate reset --force"
	},
	"devDependencies": {
		"prisma": "^6.15.0",
		"tsdown": "catalog:",
		"tsx": "catalog:",
		"@dukkani/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@prisma/client": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@t3-oss/env-core": "catalog:",
		"@dukkani/env": "workspace:*"
	}
}

{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**"],
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"FACEBOOK_CLIENT_ID",
				"FACEBOOK_CLIENT_SECRET",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"STORAGE_MAX_FILE_SIZE",
				"STORAGE_ALLOWED_MIME_TYPES"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:seed": {
			"cache": false
		},
		"db:reset-and-seed": {
			"cache": false
		},
		"db:reset": {
			"cache": false,
			"persistent": true
		},
		"db:format": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false,
			"persistent": true
		}
	}
}
